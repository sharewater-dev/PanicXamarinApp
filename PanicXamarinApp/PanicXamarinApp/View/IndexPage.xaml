<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PanicXamarinApp.View.IndexPage">
  <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Yellow" >
    <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional" AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.2, AutoSize" />
    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="0,5,0,0" >
      <Image  x:Name="imgPanic" Source="Panic.png" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" ></Image>
      <Label x:Name="lblStatus" />
    </StackLayout>
  </StackLayout>
</ContentPage>